---
import Layout from "../layouts/Layout.astro";
import Designs from "./Designs.astro";
import WhatsappIcon from "../icons/Whatsapp.astro";
import FacebookIcon from "../icons/Facebook.astro";
import InstagramIcon from "../icons/Instagram.astro";
---

<Layout title="Grupo Visual">
  <main class="w-full min-h-screen flex">
    <div
      class="w-full xl:w-6/12 bg-back relative pl-4 sm:pl-4 xxl:pl-8 2xl:pl-12 hidden md-lg:block"
    >
      <h3
        class="text-white italic text-3xl w-64 max-w-[80%] mt-52 z-20 hidden xl:block"
      >
        Estude com a gente e saia na frente!
      </h3>
      <div
        class="h-20 w-full lg:w-10/12 bg-secondary pl-8 py-2 absolute top-0 left-0"
      >
        <a href="/">
          <img
            alt="Logo de Grupo Visual cor branca"
            src="/images/grupo_visual_logo.webp"
            class="max-h-full"
          />
        </a>
      </div>

      <img
        alt="Mulher com uma notebook"
        src="/images/mulher.webp"
        class="absolute bottom-0 right-0 max-h-full z-10"
      />

      <Designs />
    </div>
    <div class="w-full xl:w-6/12">
      <div
        class="h-20 w-full bg-secondary pl-8 py-2 top-0 left-0 block md-lg:hidden"
      >
        <a href="/">
          <img
            alt="Logo de Grupo Visual cor branca"
            src="/images/grupo_visual_logo.webp"
            class="max-h-full"
          />
        </a>
      </div>
      <div
        class="w-full h-[calc(100vh-5rem)] md-lg:h-full px-2 sm:px-4 md:px-8 flex flex-col justify-center items-center relative"
      >
        <div class="w-fit h-fit max-w-full">
          <h1
            class="text-back font-bold text-6xl md:text-7xl lg:text-8xl text-center md-lg:text-right"
          >
            Site em
          </h1>
          <div
            class="text-center md-lg:text-right w-full flex flex-col items-center md-lg:items-end"
          >
            <h2
              class="text-back font-bold text-5xl md:text-6xl lg:text-7xl text-left md-lg:text-right"
            >
              manutenção
            </h2>

            <h2
              class="text-2xl md:text-3xl lg:text-4xl font-bold text-primary w-[30rem] md-lg:w-96 max-w-full mt-12"
            >
              Estamos atualizando para te oferecer a melhor experiência!
            </h2>

            <a
              href="https://www.gpvisualead.com.br/login"
              target="_blank"
              class="mt-12"
            >
              <button
                class="bg-primary rounded-sm text-white text-xl md:text-2xl font-bold p-4 md:p-6 shadow-sm hover:scale-110 duration-200"
              >
                ÁREA DO ALUNO</button
              >
            </a>

            <div class="w-fit mt-12 flex space-x-3">
              <a
                target="_blank"
                href="https://www.instagram.com/grupovisualfb/"
              >
                <div
                  class="w-10 h-10 bg-back p-2 rounded-full hover:scale-110 duration-200"
                >
                  <InstagramIcon />
                </div>
              </a>
              <a
                target="_blank"
                href="https://www.facebook.com/grupovisualcursos/?ref=pages_you_manage"
              >
                <div
                  class="w-10 h-10 bg-back p-2 rounded-full hover:scale-110 duration-200"
                >
                  <FacebookIcon />
                </div>
              </a>
              <a target="_blank" href="https://wa.me/+554699044965">
                <div
                  class="w-10 h-10 bg-back p-2 rounded-full hover:scale-110 duration-200"
                >
                  <WhatsappIcon />
                </div>
              </a>
            </div>
          </div>
        </div>
      </div>
    </div>
  </main>
</Layout>
